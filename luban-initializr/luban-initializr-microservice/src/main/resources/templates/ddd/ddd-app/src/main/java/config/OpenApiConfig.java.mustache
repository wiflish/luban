package {{packageName}}.config;

import io.swagger.v3.oas.models.OpenAPI;
import io.swagger.v3.oas.models.info.Contact;
import io.swagger.v3.oas.models.info.Info;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

/**
 *
 * &lt;a href="https://springdoc.org/>springdoc指南</a>
 * @author wiflish
 * @since {{currentDate}}
 */
@Configuration
public class OpenApiConfig {
    @Bean
    public OpenAPI initOpenAPI() {
        return new OpenAPI().info(
                new Info().title("{{name}}接口文档")
                        .description("{{description}}")
                        .contact(buildContact("谢峥嵘", "xzr@peipeiche.com"))
                        .contact(buildContact("黄朝", "huangchao@peipeiche.com"))
                        .contact(buildContact("谭亚平", "tan@peipeiche.com"))
                        .version("1.0")
        );
    }

    private Contact buildContact(String name, String email) {
        Contact contact = new Contact();
        contact.setName(name);
        contact.setEmail(email);
        return contact;
    }
}